// Test: Verificar que project_variance() calcule correctamente
// con rutas críticas paralelas

let proyecto_prueba = {
    nodes: {
        A: {op: 5, mo: 6, pe: 7},
        B: {op: 5, mo: 6, pe: 7},
        C: {op: 5, mo: 6, pe: 7},
        D: {op: 5, mo: 6, pe: 7},
        E: {op: 5, mo: 6, pe: 7},
        F: {op: 5, mo: 6, pe: 7},
        G: {op: 5, mo: 6, pe: 7},
        H: {op: 5, mo: 6, pe: 7},
        I: {op: 5, mo: 6, pe: 7}
    },
    edges: [
        A -> C,
        B -> D,
        B -> E,
        C -> F,
        D -> G,
        E -> G,
        F -> G,
        F -> H,
        G -> I,
        H -> I
    ]
}

// Este proyecto tiene 2 rutas críticas paralelas:
// Ruta 1: A -> C -> F -> G -> I (5 nodos)
// Ruta 2: A -> C -> F -> H -> I (5 nodos)

// Test 1: critical_path() ahora devuelve UNA ruta completa
let ruta = critical_path(proyecto_prueba)
ruta
// Esperado: ["A", "C", "F", "G", "I"] o ["A", "C", "F", "H", "I"]
// (5 nodos, NO 6)

// Test 2: all_critical_paths() devuelve TODAS las rutas
let todas_rutas = all_critical_paths(proyecto_prueba)
todas_rutas
// Esperado: [["A", "C", "F", "G", "I"], ["A", "C", "F", "H", "I"]]

// Test 3: Varianza individual de cada tarea
// Variance = ((pe - op) / 6)^2 = ((7 - 5) / 6)^2 = (2/6)^2 = 0.1111...
let var_por_tarea = task_variance(5, 6, 7)
var_por_tarea

// Test 4: project_variance() ahora debe calcular correctamente
// Debe ser: 5 tareas × 0.1111 = 0.5555 (NO 6 × 0.1111 = 0.666)
let varianza_proyecto = project_variance(proyecto_prueba)
varianza_proyecto
// Esperado: 0.5555...

