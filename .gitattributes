# Auto detect text files and perform LF normalization
* text=auto

# Rust source files
*.rs text eol=lf
*.toml text eol=lf
*.lock text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown and documentation
*.md text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Config files
.gitignore text eol=lf
.editorconfig text eol=lf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.pdf binary
