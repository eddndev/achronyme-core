root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,json}]
indent_style = space
indent_size = 2

[*.{cpp,hpp,h,c}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[CMakeLists.txt]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
