{
  "name": "@achronyme/core",
  "version": "0.3.0",
  "type": "module",
  "description": "High-performance mathematical computation engine with DSP and functional programming - TypeScript SDK over WebAssembly core",
  "main": "dist/sdk/index.js",
  "types": "dist/sdk/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sdk/index.js",
      "types": "./dist/sdk/index.d.ts"
    },
    "./wasm": {
      "import": "./dist/achronyme-core.mjs"
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build:wasm": "node scripts/build-cross-platform.mjs wasm",
    "build:wasm:dev": "node scripts/build-cross-platform.mjs wasm-dev",
    "build:js": "tsc",
    "build": "npm run build:wasm && npm run build:js",
    "build:dev": "npm run build:wasm:dev && npm run build:js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:sdk": "node test-sdk.mjs",
    "test:dsp": "node test-dsp-intensive.mjs",
    "test:all": "npm run test:sdk && npm run test:dsp",
    "test:cpp": "echo 'C++ tests require native build. See wasm/README.md'",
    "benchmark": "node dist/benchmark.js",
    "optimize": "bash scripts/optimize-wasm.sh",
    "prepublishOnly": "npm run build && npm run optimize",
    "clean": "node scripts/clean.mjs"
  },
  "keywords": [
    "wasm",
    "webassembly",
    "math",
    "mathematics",
    "scientific-computing",
    "dsp",
    "digital-signal-processing",
    "linear-algebra",
    "fourier",
    "fft",
    "dft",
    "convolution",
    "numerical-methods",
    "optimization",
    "symbolic-computation",
    "mathematical-engine",
    "soc",
    "superior-order-calculator",
    "calculator",
    "parser",
    "expression-evaluator"
  ],
  "author": "Eduardo Alonso <contacto@eddndev.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eddndev/achronyme-core"
  },
  "bugs": {
    "url": "https://github.com/eddndev/achronyme-core/issues"
  },
  "homepage": "https://achronyme.com",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
